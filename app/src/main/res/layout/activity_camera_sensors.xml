<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="12dp"
    android:keepScreenOn="true">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <!-- ================================================= -->
    <!-- FRONT CAMERA (23% HEIGHT, CENTERED)              -->
    <!-- ================================================= -->
    <TextureView
        android:id="@+id/frontCam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"

        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintWidth_percent="0.80"
        app:layout_constraintHeight_percent="0.23"/>

    <com.example.truckalert.OverlayView
        android:id="@+id/frontOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frontCam"
        app:layout_constraintBottom_toBottomOf="@id/frontCam"
        app:layout_constraintStart_toStartOf="@id/frontCam"
        app:layout_constraintEnd_toEndOf="@id/frontCam"/>


    <!-- ================================================= -->
    <!-- LEFT CAMERA (18% HEIGHT)                         -->
    <!-- ================================================= -->
    <TextureView
        android:id="@+id/leftCam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"

        app:layout_constraintTop_toBottomOf="@id/frontCam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightCam"

        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.18"/>

    <com.example.truckalert.OverlayView
        android:id="@+id/leftOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/leftCam"
        app:layout_constraintBottom_toBottomOf="@id/leftCam"
        app:layout_constraintStart_toStartOf="@id/leftCam"
        app:layout_constraintEnd_toEndOf="@id/leftCam"/>


    <!-- ================================================= -->
    <!-- RIGHT CAMERA (18% HEIGHT)                        -->
    <!-- ================================================= -->
    <TextureView
        android:id="@+id/rightCam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"

        app:layout_constraintTop_toBottomOf="@id/frontCam"
        app:layout_constraintStart_toEndOf="@id/leftCam"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.18"/>

    <com.example.truckalert.OverlayView
        android:id="@+id/rightOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/rightCam"
        app:layout_constraintBottom_toBottomOf="@id/rightCam"
        app:layout_constraintStart_toStartOf="@id/rightCam"
        app:layout_constraintEnd_toEndOf="@id/rightCam"/>


    <!-- ================================================= -->
    <!-- BACK CAMERA (23% HEIGHT, CENTERED)               -->
    <!-- ================================================= -->
    <TextureView
        android:id="@+id/backCam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"

        app:layout_constraintTop_toBottomOf="@id/rightCam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintWidth_percent="0.80"
        app:layout_constraintHeight_percent="0.23"/>

    <com.example.truckalert.OverlayView
        android:id="@+id/backOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/backCam"
        app:layout_constraintBottom_toBottomOf="@id/backCam"
        app:layout_constraintStart_toStartOf="@id/backCam"
        app:layout_constraintEnd_toEndOf="@id/backCam"/>


    <!-- ================================================= -->
    <!-- SENSORS TITLE                                    -->
    <!-- ================================================= -->
    <TextView
        android:id="@+id/sensorsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensors"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/backCam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- SENSOR GRID (FIT CONTENT) -->
    <GridLayout
        android:id="@+id/sensorGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:columnCount="3"
        android:rowCount="1"
        app:layout_constraintTop_toBottomOf="@id/sensorsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- LEFT SENSOR -->
        <TextView
            android:id="@+id/leftSensor"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:padding="12dp"
            android:text="Left"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <!-- SPACER (ADJUST WIDTH TO CONTROL SPACE) -->
        <View
            android:layout_width="40dp"
            android:layout_height="1dp"/>

        <!-- RIGHT SENSOR -->
        <TextView
            android:id="@+id/rightSensor"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:padding="12dp"
            android:text="Right"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </GridLayout>



    <!-- BACK SENSOR -->
    <TextView
        android:id="@+id/backSensor"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/sensorGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
