<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@android:color/black"
    android:padding="12dp">

    <!-- Back Button -->

    <!-- Title -->

    <!-- CAMERA GRID (2Ã—2) -->

    <!-- LEFT CAMERA -->

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/black"
        android:text="Back"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cameraTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Camera"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <TextureView
        android:id="@+id/leftCam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cameraTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightCam"
        app:layout_constraintHeight_percent="0.20"
        android:layout_marginTop="12dp" />

    <com.example.truckalert.OverlayView
        android:id="@+id/leftOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/leftCam"
        app:layout_constraintBottom_toBottomOf="@id/leftCam"
        app:layout_constraintStart_toStartOf="@id/leftCam"
        app:layout_constraintEnd_toEndOf="@id/leftCam" />

    <!-- RIGHT CAMERA -->
    <TextureView
        android:id="@+id/rightCam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cameraTitle"
        app:layout_constraintStart_toEndOf="@id/leftCam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.20"
        android:layout_marginTop="12dp" />

    <com.example.truckalert.OverlayView
        android:id="@+id/rightOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/rightCam"
        app:layout_constraintBottom_toBottomOf="@id/rightCam"
        app:layout_constraintStart_toStartOf="@id/rightCam"
        app:layout_constraintEnd_toEndOf="@id/rightCam" />

    <!-- FRONT CAMERA -->
    <TextureView
        android:id="@+id/frontCam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/leftCam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/backCam"
        app:layout_constraintHeight_percent="0.20"
        android:layout_marginTop="12dp" />

    <com.example.truckalert.OverlayView
        android:id="@+id/frontOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frontCam"
        app:layout_constraintBottom_toBottomOf="@id/frontCam"
        app:layout_constraintStart_toStartOf="@id/frontCam"
        app:layout_constraintEnd_toEndOf="@id/frontCam" />

    <!-- BACK CAMERA -->
    <TextureView
        android:id="@+id/backCam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rightCam"
        app:layout_constraintStart_toEndOf="@id/frontCam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.20"
        android:layout_marginTop="12dp" />

    <com.example.truckalert.OverlayView
        android:id="@+id/backOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/backCam"
        app:layout_constraintBottom_toBottomOf="@id/backCam"
        app:layout_constraintStart_toStartOf="@id/backCam"
        app:layout_constraintEnd_toEndOf="@id/backCam" />

    <!-- SENSORS TITLE -->

    <!-- SENSOR GRID -->
    <TextView
        android:id="@+id/sensorsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Sensors"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backCam" />

    <GridLayout
        android:id="@+id/sensorGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:columnCount="2"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/sensorsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/leftSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:padding="12dp"
            android:text="Left"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rightSensor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:padding="12dp"
            android:text="Right"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </GridLayout>

    <!-- BACK SENSOR -->
    <TextView
        android:id="@+id/backSensor"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:padding="12dp"
        android:text="Back"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/sensorGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
